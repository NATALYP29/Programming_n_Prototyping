#CFU 17 Review + build in formating functions

box ="pop"
def formating(box):
    userInput = input("Choice?(1,2,3,4,5,6,7,8,9)")
    if userInput == 1:
       #Capatalize the first letter of the variable 
       box = box.capitalize()
       print(box)
    elif userInput == 2:
        #find and return the position of a value in the string
        box = box.find("i")
        print(box)
    elif userInput == 3:
        #return tru if the variable is a number
        box = box.isdigit()
        print(box)
    elif userInput == 4:
        #output the variable all lowercase
        box = box.lower()
        print(box)
    elif userInput == 5:
        #replace an index value item for another 
        print(box.replace("o","a"))
    elif userInput == 6:
        #output all upper case
        box = box.upper()
        print(box)
   
    else:
        pass
formating(box)
   
       
